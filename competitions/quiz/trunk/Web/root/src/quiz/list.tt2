    <td>[% quiz.id %]</td>
    <td>[% quiz.description %]</td>
    <td>[% quiz.type %]</td>
    <td>[% letters.$id %]</td>
    <td>
         <a href="[% c.uri_for('/play/update/') _ quiz.id %]">Go!</a>
    </td>
  </tr>
[% END -%]
</table>

